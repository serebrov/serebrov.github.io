{{#extend "layout"}}
  {{#content "body"}}
      <small class="pull-right"> {{formatDate this.date "%Y-%m-%d"}} </small>
      <div class="post-title">
          <h1>{{ title }}</h1>
      </div>
      <div class="post-body">
          {{ body }}
      </div>
      <div>
          {{#embed "so"}}
          {{/embed}}
      </div>
      <div>
          {{#embed "disqus"}}
          {{/embed}}
      </div>
  {{/content}}
{{/extend}}
